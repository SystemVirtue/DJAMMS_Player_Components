{
  "name": "djamms-player",
  "version": "2.0.0",
  "description": "DJAMMS Video Player - Crossfading video player with search and browse functionality",
  "main": "electron/main.mjs",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "electron"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .",
    "build": "npm run build:vite && npm run build:rollup",
    "build:vite": "vite build",
    "build:rollup": "rollup -c && cp fullscreen.html dist/",
    "build:electron": "npm run build && electron-builder",
    "build:electron:mac": "npm run build && electron-builder --mac",
    "build:electron:win": "npm run build && electron-builder --win",
    "build:electron:linux": "npm run build && electron-builder --linux",
    "start": "electron .",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "postinstall": "electron-builder install-app-deps",
    "dev:kiosk": "npm run dev --prefix web/kiosk",
    "dev:admin": "npm run dev --prefix web/admin",
    "build:kiosk": "npm run build --prefix web/kiosk",
    "build:admin": "npm run build --prefix web/admin",
    "install:web": "npm install --prefix web/kiosk && npm install --prefix web/admin"
  },
  "keywords": [
    "react",
    "video-player",
    "crossfade",
    "electron",
    "djamms",
    "music-player"
  ],
  "author": "DJAMMS Team",
  "license": "MIT",
  "type": "module",
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.2.0",
    "@rollup/plugin-babel": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^3.0.0",
    "rollup-plugin-dts": "^5.0.0",
    "tailwindcss": "^3.4.18",
    "ts-jest": "^29.4.6",
    "tslib": "^2.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/djamms-player-react.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/djamms-player-react/issues"
  },
  "homepage": "https://github.com/your-org/djamms-player-react#readme",
  "dependencies": {
    "@supabase/supabase-js": "^2.86.0",
    "axios": "^1.13.2",
    "electron": "^39.2.4",
    "electron-store": "^11.0.2",
    "fuse.js": "^7.1.0",
    "react-router-dom": "^7.9.6"
  },
  "build": {
    "appId": "com.djamms.player",
    "productName": "DJAMMS Player",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "!node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "dist",
        "to": "app/dist"
      }
    ],
    "mac": {
      "category": "public.app-category.music",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Audio"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
